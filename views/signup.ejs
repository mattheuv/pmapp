<%- include('layouts/header'); -%>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>Registrarse</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/signup">
                    <div class="form-group">
                        <input class="form-control" name="email" type="email" placeholder="Escriba su correo electrónico" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input class="form-control" name="password" type="password" placeholder="Escriba su contraseña" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input class="form-control" name="address" type="text" placeholder="Escriba su dirección" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <input class="form-control" name="telephone" type="telephone" placeholder="Escriba su número teléfono" required>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary btn-block mt-4">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('layouts/footer'); -%>
